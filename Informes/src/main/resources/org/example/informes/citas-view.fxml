<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #f0f4ff;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.informes.CitasController">
    <children>
        <!-- Título -->
        <Label layoutX="123.0" layoutY="23.0" text="Generar Informe de Citas" textFill="#0d47a1">
            <font>
                <Font name="Arial Black" size="18.0" />
            </font>
        </Label>

        <!-- Campos de entrada -->
        <Label layoutX="30.0" layoutY="80.0" text="Fecha (YYYY-MM-DD):" textFill="#0d47a1" />
        <TextField fx:id="dateField" layoutX="180.0" layoutY="75.0" prefWidth="180.0" />

        <Label layoutX="29.0" layoutY="130.0" text="ID del Médico:" textFill="#0d47a1" />
        <TextField fx:id="patientIdField" layoutX="180.0" layoutY="125.0" prefWidth="180.0" />

        <!-- Botón para generar el informe -->
        <Button layoutX="63.0" layoutY="200.0" onAction="#goBack" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #0d47a1; -fx-text-fill: white;" text="Volver" />

        <!-- Botón para volver -->
        <Button layoutX="252.0" layoutY="200.0" onAction="#generateReport" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #0d47a1; -fx-text-fill: white;" text="Generar" />

        <Rectangle fill="#0d47a1" height="20.0" layoutX="0.0" layoutY="330.0" width="450.0" />
        <Label layoutX="140.0" layoutY="332.0" style="-fx-font-size: 11;" text="© 2025 Giftiliano Healthcare" textFill="#ffffff" />
    </children>
</AnchorPane>
